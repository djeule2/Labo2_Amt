<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
      <display-name>Archetype Created Web Application</display-name>

      <servlet>
      <servlet-name>List</servlet-name>
      <servlet-class>ch.heig.od.presentation.Liste</servlet-class>
      </servlet>

        <servlet>
            <servlet-name>Pagnier</servlet-name>
        <servlet-class>ch.heig.od.presentation.Cart</servlet-class>
        </servlet>

      <servlet>
        <servlet-name>Detail-Product</servlet-name>
        <servlet-class>ch.heig.od.presentation.DetailProduct</servlet-class>
      </servlet>

      <servlet>
        <servlet-name>Acceuil</servlet-name>
        <servlet-class>ch.heig.od.presentation.Home</servlet-class>
        <load-on-startup>1</load-on-startup>
      </servlet>

      <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>ch.heig.od.presentation.checkoutUser</servlet-class>
      </servlet>

      <servlet>
      <servlet-name>ajoutProduit</servlet-name>
      <servlet-class>ch.heig.od.presentation.AjouteProuduit</servlet-class>
     </servlet>

      <servlet>
        <servlet-name>ajoutUser</servlet-name>
        <servlet-class>ch.heig.od.presentation.AddUser</servlet-class>
      </servlet>

        <servlet>
            <servlet-name>shoesWoman</servlet-name>
        <servlet-class>ch.heig.od.presentation.WomanShoes</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>shoesMan</servlet-name>
            <servlet-class>ch.heig.od.presentation.ManShoes</servlet-class>
        </servlet>



    <servlet-mapping>
        <servlet-name>shoesMan</servlet-name>
        <url-pattern>/manShoes</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>shoesWoman</servlet-name>
        <url-pattern>/womanShoes</url-pattern>
    </servlet-mapping>


      <servlet-mapping>
        <servlet-name>ajoutUser</servlet-name>
        <url-pattern>/register</url-pattern>
      </servlet-mapping>

        <servlet-mapping>
            <servlet-name>Pagnier</servlet-name>
            <url-pattern>/cart</url-pattern>
        </servlet-mapping>

      <servlet-mapping>
        <servlet-name>ajoutProduit</servlet-name>
        <url-pattern>/registerProduct</url-pattern>
      </servlet-mapping>

      <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/checkout</url-pattern>
      </servlet-mapping>

      <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/produits</url-pattern>
      </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Detail-Product</servlet-name>
    <url-pattern>/product-detail</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Acceuil</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>


</web-app>
